<% layout('layouts/boilerplate') %>

<h1><%= campground.title %></h1>
<h3><%= campground.location %></h3>
<img src="<%= campground.image %>" alt="<%= campground.title %>">
<h4 class="text-muted">$<%= campground.price %>/night</h4>
<p><%= campground.description %></p>

<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
    <button>Delete Campground</button>
</form>

<p>
    <a href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
</p>
<a href="/campgrounds">Back to all campgrounds</a>