<% layout('layouts/boilerplate') %>

<h1>Edit Campground</h1>

<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <label>
        Title:
        <input type="text" name="campground[title]" value="<%= campground.title %>">
    </label>
    <label>
        Location:
        <input type="text" name="campground[location]" value="<%= campground.location %>">
    </label>
    <button>Update Campground</button>
</form>

<a href="/campgrounds">Back to all campgrounds</a>